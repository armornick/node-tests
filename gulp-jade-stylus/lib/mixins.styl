

vertical-menu() {
	list-style-type: none;
	margin: 0; padding: 0;
}


block(w = 60px, center-text = false) {
	display: block;
	width: w;
	text-decoration: none;
	
	if center-text {
		text-align: center;
	}
}



inline-list() {
	list-style-type: none;
	margin: 0; padding: 0;
	
	li {
		display: inline;
	}
}


floated-list(f = left) {
	list-style-type: none;
	margin: 0; padding: 0;
	overflow: hidden;
	
	li {
		float: f;
	}
}


border-radius(radius = 6px) {
	/* Safari 3-4, iOS 1-3.2, Android 1.6- */
  -webkit-border-radius: radius;
  /* Firefox 1-3.6 */
  -moz-border-radius: radius;
  /* Opera 10.5, IE 9, Safari 5, Chrome, Firefox 4, iOS 4, Android 2.1+ */
  border-radius: radius;
}